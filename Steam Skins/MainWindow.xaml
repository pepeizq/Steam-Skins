                                </ScrollViewer>
                            </GroupBox>

                            <GroupBox x:Name="groupBoxEditorTexturas" Grid.Column="1">
                                <GroupBox.Header>
                                    <Label x:Name="groupBoxEditorTextura" FontSize="16" Foreground="White"/>
                                </GroupBox.Header>

                                <TabControl HorizontalAlignment="Left" Margin="5">
                                    <TabItem Header="graphics">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Column="0">
                                                <TabControl x:Name="tabControlEditorTexturasGraphics" TabStripPlacement="Left" />
                                            </ScrollViewer>

                                            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Margin="5,0,0,0">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Label x:Name="labelEditorTexturasGraphics" Grid.Row="0"/>
                                                    <Image x:Name="imageEditorTexturasGraphics" Grid.Row="1"/>
                                                </Grid>
                                            </ScrollViewer>                                            
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="resource">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Column="0">
                                                <TabControl x:Name="tabControlEditorTexturasResource" TabStripPlacement="Left" />
                                            </ScrollViewer>

                                            <Grid Grid.Column="1" Margin="5,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Label x:Name="labelEditorTexturasResource" Grid.Row="0"/>
                                                <Image x:Name="imageEditorTexturasResource" Grid.Row="1"/>
                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                </TabControl>
                            </GroupBox>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemOpciones">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="gridOptionsLanguageLabel" Grid.Column="0" Margin="0,0,10,0"/>
                        <ComboBox x:Name="comboBoxOpcionesIdioma" Grid.Column="1">
                            <ComboBoxItem Content="English" Margin="5,0" />
                            <ComboBoxItem Content="Español" Margin="5,0" />
                        </ComboBox>
                        <Label x:Name="gridOptionsLanguageLabelAviso" Grid.Column="2" Margin="10,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,30,0,0">
                        <Button x:Name="buttonCleanAllSkins" HorizontalAlignment="Left" />
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,30,0,0">
                        <CheckBox x:Name="checkBoxOpcionesEditorDev" />
                    </Grid>
                </Grid>
            </TabItem>
        </dragablz:TabablzControl>

        

        <Grid x:Name="gridPrincipalScreenshot" Grid.Row="1" Margin="10" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="buttonBarraSuperiorVolverScreenshot" Grid.Row="0" HorizontalAlignment="Left"/>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" CanContentScroll="True" Margin="0,10,0,0">
                <Image x:Name="imageScreenshotAmpliada" Stretch="UniformToFill" />
            </ScrollViewer>             
        </Grid>

        
       
        <tb:TaskbarIcon x:Name="NotifyIcon"
			Visibility="Visible"
			ToolTipText="Steam Skins"
			IconSource="/Imagenes/Icono/steam-256.ico"
