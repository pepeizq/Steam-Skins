                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="labelSkinOpcion6" Grid.Column="0" VerticalContentAlignment="Center" Margin="0,0,5,0" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="comboBoxSkinOpcion6" Grid.Column="1" Height="34" Width="150"/>
                                    </Grid>

                                    <Grid x:Name="gridSkinOpcion7" Grid.Row="6" Margin="7,5,10,5" Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="labelSkinOpcion7" Grid.Column="0" VerticalContentAlignment="Center" Margin="0,0,5,0" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="comboBoxSkinOpcion7" Grid.Column="1" Height="34" Width="150"/>
                                    </Grid>

                                    <Grid x:Name="gridSkinOpcion8" Grid.Row="7" Margin="7,5,10,5" Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="labelSkinOpcion8" Grid.Column="0" VerticalContentAlignment="Center" Margin="0,0,5,0" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="comboBoxSkinOpcion8" Grid.Column="1" Height="34" Width="150"/>
                                    </Grid>

                                    <Grid x:Name="gridSkinOpcion9" Grid.Row="8" Margin="7,5,10,5" Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="labelSkinOpcion9" Grid.Column="0" VerticalContentAlignment="Center" Margin="0,0,5,0" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="comboBoxSkinOpcion9" Grid.Column="1" Height="34" Width="150"/>
                                    </Grid>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Column="1" Margin="0">
                                <GroupBox.ToolTip>
                                    <Grid>
                                        <Label x:Name="tabControlScreenshotsTooltip" Foreground="White"/>
                                    </Grid>
                                </GroupBox.ToolTip>
                                <GroupBox.Header>
                                    <Label x:Name="tabControlScreenshotsLabel" FontSize="16" Foreground="White"/>
                                </GroupBox.Header>

                                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition x:Name="columnImage1" Width="*"/>
                                            <ColumnDefinition x:Name="columnImage2" Width="*"/>
                                            <ColumnDefinition x:Name="columnImage3" Width="*"/>
                                            <ColumnDefinition x:Name="columnImage4" Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="buttonImagePreview1" Grid.Column="0" Margin="5" Padding="0" Background="White" MinWidth="30" Height="Auto">
                                            <Button.Content>
                                                <ImageBrush x:Name="imagePreview1" Stretch="UniformToFill" />
                                            </Button.Content>
                                        </Button>

                                        <Button x:Name="buttonImagePreview2" Grid.Column="1" Margin="5" Padding="0" Background="White" MinWidth="30" Height="Auto">
                                            <Button.Content>
                                                <ImageBrush x:Name="imagePreview2" Stretch="UniformToFill" />
